<p id="notice"><%= notice %></p>

<h1 align="center">Checkouts</h1>

<div class="container">

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Due date</th>
      <th>Checkout</th>
      <th>Cardholder</th>
      <th>Staff member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkouts.each do |checkout| %>
      <tr>
        <td><%= checkout.date %></td>
        <td><%= checkout.due_date %></td>
        <td><%= checkout.checkout_id %></td>
        <td><%= checkout.cardholder_id %></td>
        <td><%= checkout.staff_member_id %></td>
        <td><%= link_to 'Show', checkout %></td>
        <td><%= link_to 'Edit', edit_checkout_path(checkout) %></td>
        <td><%= link_to 'Destroy', checkout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


